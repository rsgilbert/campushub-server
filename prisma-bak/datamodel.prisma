type User {
      id: ID! @id
      name: String
      email: String! @unique
      password: String!
      items: [Item!]!
      createdAt: DateTime! @createdAt
      orders: [Order!]
}

type Item {
    id: ID! @id
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    name: String
    price: Int
    category: String
    inStock: Boolean
    description: String
    images: [Image!]!
    user: User
}

type Image {
    id: ID! @id
    src: String!
    item: Item
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
}

type Order {
    id: ID! @id
    item: Item
    cancelled: Boolean
    completed: Boolean
    location: String
    phone: String
    createdAt: DateTime! @createdAt
    updatedAt: DateTime! @updatedAt
    user: User


}

